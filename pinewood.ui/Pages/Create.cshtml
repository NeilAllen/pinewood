@page
@model Create

@{
    ViewData["Title"] = "Create";
}

<h3>Create</h3>
<h2>Enter Customer Name:</h2>
<form method="POST">
    <div class="row"><div class="col-sm-2">Name: </div><div class="col-sm-8"><input asp-for="Customer.Name" /> </div></div>
    <div class="row"><div class="col-sm-2">EMail: </div><div class="col-sm-8"><input asp-for="Customer.EmailAddress" /> </div></div>
    <div class="row"><div class="col-sm-2">Address: </div><div class="col-sm-8"><input asp-for="Customer.PostalAddress" /> </div></div>
    <div class="row"><div class="col-sm-2">Post Code: </div><div class="col-sm-8"><input asp-for="Customer.PostalCode" /> </div></div>
    <div class="row"><div class="col-sm-2">Telephone: </div><div class="col-sm-8"><input asp-for="Customer.TelephoneNumber" /> </div></div>
    <input type="submit" />
</form>